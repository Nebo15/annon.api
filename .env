# DB
## PosgreSQL
DB_NAME=gateway
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=travis
DB_PORT=5432

## Migrations
APP_MIGRATE=true

# HTTP Endpoints
GATEWAY_PUBLIC_PORT=4000
GATEWAY_PRIVATE_PORT=4001

# Distributed Erlang settings
ERLANG_COOKIE=c2VjcmV0X2VybGFuZ19jb29raWUK
LISTEN_DIST_MIN=10000
LISTEN_DIST_MAX=10100
POD_IP=127.0.0.1
